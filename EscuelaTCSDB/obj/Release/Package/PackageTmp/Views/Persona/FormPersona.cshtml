@model EscuelaTCSDB.Models.ViewModel.PersonaViewModel
@{
    ViewBag.Title = "Agregar Persona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-6">

            <h2>Agregar Persona <i class="fa fa-user-plus"></i></h2>
            @using (Html.BeginForm("Crear", "Persona", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                //Validacion interna
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <!--Nombre-->
                <div class="form-group">
                    @Html.LabelFor(x => x.nombre, htmlAttributes: new { @class = "control-label" })
                    <i class="fa fa-address-book"></i>
                    @Html.EditorFor(x => x.nombre, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <!--Apellido-->
                <div class="form-group">
                    @Html.LabelFor(x => x.apellido, htmlAttributes: new { @class = "control-label" })
                    <i class="fa fa-address-book"></i>
                    @Html.EditorFor(x => x.apellido, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <!--Email-->
                <div class="form-group">
                    @Html.LabelFor(x => x.email, htmlAttributes: new { @class = "control-label" })
                    <i class="fa fa-folder-open"></i>
                    @Html.EditorFor(x => x.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.email, "", new { @class = "text-danger" })
                </div>

                <!--Tipo-->
                <div class="form-group">
                    @Html.LabelFor(x => x.TipoPersonaId, new { @class = "control-label" })
                    <i class="fa fa-users"></i>
                    @Html.DropDownListFor(x => x.TipoPersonaId, new SelectList(Model.TipoPersonas, "Id", "descripcion"), "Selecciona Tipo", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.TipoPersonaId, "", new { @class = "text-danger" })
                </div>
                <!--Password-->
                <div class="form-group">
                    @Html.LabelFor(x => x.password, htmlAttributes: new { @class = "control-label" })
                    <i class="fa fa-user-secret"></i>
                    @Html.PasswordFor(x => x.password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.foto_archivo, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.foto_archivo, new { id = "foto_archivo", name = "foto_archivo", type = "file", @class = "form-control", multiple = "false" })
                </div>

                <div class="form-group">
                    @Html.HiddenFor(x => x.Id)
                    <input type="submit" value="Guardar" id="btn-guardar-persona" class="btn btn-default" />
                </div>
            }
        </div>
        <div class="col-sm-6">

            <div class="form-group">
                <img id="foto" src="@Url.Content(Model.foto)" style="width:400px;height:350px;" />
            </div>

        </div>
    </div>
</div>


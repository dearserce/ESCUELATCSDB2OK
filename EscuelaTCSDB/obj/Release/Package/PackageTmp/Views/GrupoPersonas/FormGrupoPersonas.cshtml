@model EscuelaTCSDB.Models.ViewModel.GrupoPersonaViewModel
@{
    /**/

    /**/

    ViewBag.Title = "Asignar Grupo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar Asignacion</h2>

@using (Html.BeginForm("Crear", "GrupoPersonas"))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.GrupoId, new { @class = "form-label" })
        @Html.DropDownListFor(x => x.GrupoId, new SelectList(Model.grupoList, "Id", "codigo"), "selecciona Grupo", new
        {
       @class = "form-control"
        })
        @Html.ValidationMessageFor(x => x.GrupoId,"", new { @class = "text-danger" })
    </div>

    //
    <div class="form-group">
        @Html.LabelFor(x => x.MateriaId,new { @class = "form-label" })
        @Html.DropDownListFor(x => x.MateriaId, new SelectList(Model.materiaList, "Id", "nombre"), "selecciona Materia", new
        {
       @class = "form-control"
        })
        @Html.ValidationMessageFor(x => x.MateriaId, "", new { @class = "text-danger" })
    </div>
    //
    <div class="form-group">
        @Html.LabelFor(x => x.CicloId, new { @class = "form-label" })
        @Html.DropDownListFor(x => x.CicloId, new SelectList(Model.cicloList, "Id", "Id"), "selecciona Ciclo", new
        {
       @class = "form-control"
        })
        @Html.ValidationMessageFor(x => x.CicloId, "", new { @class = "text-danger" })
    </div>
    //
    <div class="form-group">
        @Html.LabelFor(x => x.PersonaId, new { @class = "form-label" })
        @Html.DropDownListFor(x => x.PersonaId, new SelectList(Model.personaList, "Id", "email"), "selecciona Persona", new
        {
       @class = "form-control"
        })
        @Html.ValidationMessageFor(x => x.PersonaId, "", new { @class = "text-danger" })
    </div>
    //
    <div class="form-group">
        @Html.LabelFor(x => x.ProfesorId,"Profesor", new { @class = "form-label" })
        @Html.DropDownListFor(x => x.ProfesorId, new SelectList(Model.profesorList, "Id", "email"), "selecciona Profesor", new
        {
       @class = "form-control"
        })
        @Html.ValidationMessageFor(x => x.ProfesorId, "", new { @class = "text-danger" })
    </div>


    //:D form
    @Html.HiddenFor(x => x.Id)
    <input type="submit" value="Guardar" />
}



@model EscuelaTCSDB.Models.ViewModel.MateriaViewModel
@{
    ViewBag.Title = "Agregar Materia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar Materia</h2>
@using (Html.BeginForm("Crear", "Materia"))
{
    //Validacion interna
    @Html.AntiForgeryToken()

    <!--Nombre-->
<div class="form-group">
    @Html.LabelFor(x => x.nombre, htmlAttributes: new { @class = "control-label" })
    @Html.EditorFor(x => x.nombre, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(x => x.nombre, "", new { @class = "text-danger" })

</div>

    <!--Apellido-->
    <div class="form-group">
        @Html.LabelFor(x => x.descripcion, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(x => x.descripcion, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <!--Email-->
    <div class="form-group">
        @Html.LabelFor(x => x.activo, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(x => x.activo,  new { @class = "form-control" } )
        @Html.ValidationMessageFor(x => x.activo, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        @Html.HiddenFor(x => x.Id)
        <input type="submit" value="Guardar" class="btn btn-default" />
    </div>
}


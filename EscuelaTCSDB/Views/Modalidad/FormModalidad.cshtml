@model EscuelaTCSDB.Models.ViewModel.ModalidadViewModel
@{
    ViewBag.Title = "Agregar Modalidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar Modalidad</h2>

@using (Html.BeginForm("Crear", "Modalidad"))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.descripcion, new { @class = "form-label" })
        @Html.EditorFor(x => x.descripcion, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.descripcion, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.n_meses, new { @class = "form-label" })
        @Html.EditorFor(x => x.n_meses, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.n_meses, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.n_periodos, new { @class = "form-label" })
        @Html.EditorFor(x => x.n_periodos, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.n_periodos, "", new { @class = "text-danger" })


    </div>
    //:D form
    @Html.HiddenFor(x => x.Id)
    <input type="submit" value="Guardar" />
}



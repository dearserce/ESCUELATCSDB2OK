@model EscuelaTCSDB.Models.ViewModel.ListTipoPersonaViewModel
@{
    ViewBag.Title = "Agregar Nueva persona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Crear","TipoPersona"))
{
    @Html.AntiForgeryToken()

    <h2> Agregar Tipo</h2>
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            @Html.LabelFor(modelo => modelo.descripcion, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.HiddenFor(m => m.Id)
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>

    </div>
}

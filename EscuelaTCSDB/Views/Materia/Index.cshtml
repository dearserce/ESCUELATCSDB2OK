<!-- Se declara Siempre que modelo se va a utilizar-->
@model IEnumerable<EscuelaTCSDB.Models.Materia>
@{
    ViewBag.Title = "Materias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Materias</h2>
<p>@Html.ActionLink("Nueva Materia", "Create")</p>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Activo</th>
            <th>Opciones</th>
        </tr>
        <!--Dynamic content-->
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.Id)</td>
                <td>@Html.DisplayFor(x => item.nombre)</td>
                <td>@Html.DisplayFor(x => item.descripcion)</td>
                <td>@Html.DisplayFor(x => item.activo)</td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id })
                </td>
            </tr>
        }
    </thead>
</table>

